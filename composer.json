{
    "name": "mramiro/simple-paypal",
    "description": "A simple interface for the PayPal Payments Standard API",
    "license": "MIT",
    "authors": [
      {
        "name": "Miguel Ramiro",
        "email": "miguel@mramiro.com"
      }
    ],
    "require": {
        "php": ">=5.3",
        "ext-curl": "*",
        "twig/twig": "^1.24"
    },
    "suggest": {
      "ext-openssl": "The OpenSSL extension is needed to use the PayPal EWP functionality"
    },
    "autoload": {
      "psr-4": {
        "SimplePaypal\\": "src"
      }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "mockery/mockery": "^0.9.5",
        "vlucas/phpdotenv": "^2.0"
    }
}
